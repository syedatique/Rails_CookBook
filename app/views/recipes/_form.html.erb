<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div style="width: 500px">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div style="width: 500px">
    <%= f.label :instructions %>
    <%= f.text_area :instructions %>
  </div>

  <div style="width: 500px">
    <%= f.label :category_id %>
    <%= f.select("category_id", Category.all.map {|c| [c.name, c.id]}, {prompt: 'Select Category'}, html_options = {}) %>
  </div>
  <br>

  <p>Choose your ingredients from options below:</p>
  <div >
     <%#= collection_check_boxes(:recipe, :ingredient_ids, @ingredients, :id, :name) %>
     <%= collection_check_boxes(:recipe, :ingredient_ids, Ingredient.all, :id, :name) %>

   </div>  


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
