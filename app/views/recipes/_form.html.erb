<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :instructions %><br>
    <%= f.text_area :instructions %>
  </div>

  <div class="field">
    <%= f.label :catagory_id %><br>
    <%= f.select("catagory_id", Catagory.all.map {|c| [c.name, c.id]}, {prompt: 'Select Catagory'}) %>
  </div>


  <div class="field">
     <%#= collection_check_boxes(:recipe, :ingredient_ids, @ingredients, :id, :name) %>
     <%= collection_check_boxes(:recipe, :ingredient_ids, Ingredient.all, :id, :name) %>

   </div>  


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
